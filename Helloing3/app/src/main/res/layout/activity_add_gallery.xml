<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white"
    android:gravity="center">

    <!-- Affichage de l'image ou vidéo sélectionnée -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_corner"
    android:contentDescription="Image preview" />

    <!-- Section avec les boutons pour caméra et galerie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <!-- Bouton Ouvrir Caméra -->
        <Button
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ouvrir Caméra"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:elevation="6dp" /> <!-- Ombre pour l'élévation -->

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <!-- Bouton Ouvrir Galerie -->
        <Button
            android:id="@+id/btnGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ouvrir Galerie"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:elevation="6dp" /> <!-- Ombre pour l'élévation -->

    </LinearLayout>
</LinearLayout>
